{
  "compilerOptions": {
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./dist/types",
    "module": "ESNEXT",
    "target": "es6",
    "sourceMap": true,
    "lib": ["ESNext"],
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "allowImportingTsExtensions": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["./src/**/*"]
}
